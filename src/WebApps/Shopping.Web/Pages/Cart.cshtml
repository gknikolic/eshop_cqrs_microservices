@page
@model Shopping.Web.Pages.CartModel
@{
    ViewData["Title"] = "Cart";
}

<div class="container">
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="Index">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Cart</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<div class="container mb-4">
    <div class="row">
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col"> </th>
                            <th scope="col">Product</th>
                            <th scope="col">Available</th>
                            <th scope="col" class="text-center" style="width:1%;">Quantity</th>
                            <th scope="col" class="text-center">Unit Price</th>
                            <th scope="col" class="text-center">Discount</th>
                            <th scope="col" class="text-right">Total Price</th>
                            <th> </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var cartItem in Model.Cart.Items)
                        {
                            <tr>
                                <td><img src="https://dummyimage.com/50x50/55595c/fff" /></td>
                                <td>@cartItem.ProductName</td>
                                <td>In stock</td>
                                <td><input class="form-control txtQuantity" type="number" min="1" step="1" value="@cartItem.Quantity"/></td>
                                <td class="text-right">@cartItem.Price $</td>
                                <td class="text-danger text-right discount">@(cartItem.Discount != 0 ? $"-{cartItem.Discount} $" : "")</td>
                                <td class="text-right totalPrice">@cartItem.TotalPrice $</td>
                                <td class="text-right">

                                    <form asp-page-handler="removetocart" method="post">
                                        <button class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></button>
                                        <input type="hidden" asp-for="@cartItem.ProductId" name="productId" />
                                    </form>

                                </td>
                            </tr>
                        }

                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td><strong>Total</strong></td>
                            <td id="cartTotalPrice" class="text-right"><strong>@Model.Cart.TotalPrice $</strong></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col mb-2">
            <div class="row">
                <div class="col-sm-12  col-md-6">
                    @*<button class="btn btn-lg btn-block btn-danger">Continue Shopping</button>*@
                    <a asp-page="ProductList" class="btn btn-lg btn-block btn-success">Continue Shopping</a>
                </div>
                <div class="col-sm-12 col-md-6 text-right">
                    @*<button class="btn btn-lg btn-block btn-danger text-uppercase">CheckOut</button>*@
                    <a asp-page="CheckOut" class="btn btn-lg btn-block btn-danger text-uppercase">CheckOut</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {

            $(".txtQuantity").on("change", function () {
                var quantity = $(this).val();
                var productId = $(this).closest("tr").find("input[name='productId']").val();

                $.ajax({
                    url: '@Url.Page("Cart", "UpdateQuantity")', // URL to the server-side handler
                    type: 'POST',
                    data: {
                        productId: productId,
                        quantity: quantity
                    },
                    success: function (data) {
                        if (data.success) {
                            // console.log(data);
                            updateCart(data.cart, $(this).closest("tr"));
                        } else {
                            alert("Error updating quantity.");
                        }
                    }
                });
            });

            function updateCart(cart, $row) {
                cart.items.forEach(function (item) {
                    var row = $("input[name='productId'][value='" + item.productId + "']").closest("tr");
                    row.find(".totalPrice").text(item.totalPrice + " $");
                    row.find(".txtQuantity").val(item.quantity);
                });
                $("#cartTotalPrice").text(cart.totalPrice + " $");
            }
        });
    </script>
}
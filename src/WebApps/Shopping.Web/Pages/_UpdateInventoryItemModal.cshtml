@model Shopping.Web.Pages.InventoryModel

<div class="modal fade" id="updateInventoryItemModal" tabindex="-1" role="dialog" aria-labelledby="updateInventoryItemModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="updateInventoryItemModalLabel">Update Item</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-page-handler="UpdateItem" method="post" id="update_item_form">
                    <input asp-for="UpdateInventoryItemModel.Id" type="hidden" />
                    <div class="form-group">
                        <label asp-for="UpdateInventoryItemModel.Quantity">New Quantity</label>
                        <input asp-for="UpdateInventoryItemModel.Quantity" type="number" class="form-control" placeholder="Enter new quantity" min="0" step="1">
                        @Html.ValidationMessageFor(model => model.UpdateInventoryItemModel.Quantity)
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary" form="update_item_form">Save changes</button>
            </div>
        </div>
    </div>
</div>
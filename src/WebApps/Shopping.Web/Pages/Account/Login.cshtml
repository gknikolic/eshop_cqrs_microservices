@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}
<form method="post" class="form">
    @Html.ValidationSummary();
    <div class="container border p4 col-12 col-md-6 offset-md-3">
        <h1>Login</h1>
        <div class="form-group">
            <label for="username">Email:</label>
            <input type="text" asp-for="@Model.Email" class="form-control" />
            @Html.ValidationMessageFor(m => m.Email)
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" asp-for="@Model.Password" class="form-control" />
            @Html.ValidationMessageFor(m => m.Password)
        </div>
        <div class="form-group">
            <div class="checkbox">
                <label>
                    <input asp-for="RememberMe" /> @Html.DisplayNameFor(m => m.RememberMe)
                </label>
            </div>
        </div>
        <input type="hidden" asp-for="ReturnUrl" />

        <button type="submit" class="btn btn-primary">Login</button>
    </div>
    
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



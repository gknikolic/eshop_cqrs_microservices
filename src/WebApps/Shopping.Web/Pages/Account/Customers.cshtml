            $('#customersTable_filter input').on('keyup', function () {
                // Remove previous highlights
                $('#customersTable tbody').unhighlight();

                // Highlight the searched term
                var searchTerm = $(this).val();
                if (searchTerm) {
                    $('#customersTable tbody').highlight(searchTerm);
                }
            });


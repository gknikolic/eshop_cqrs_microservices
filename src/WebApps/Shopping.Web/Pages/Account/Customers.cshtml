    <script>
        function confirmDelete(userId) {
            app.confirmAction("Are you sure you want to delete this user?", function (result) {
                if (result) {
                    // Show loader and submit the form
                    app.blockUI();
                    document.getElementById('deleteForm-' + userId).submit();
                }
            });
        }


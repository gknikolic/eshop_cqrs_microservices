@model Shopping.Web.Pages.Account.CustomersModel

<div class="modal fade" id="changePasswordModal" tabindex="-1" role="dialog" aria-labelledby="updateInventoryItemModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="updateInventoryItemModalLabel">Change Password</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-page-handler="ChangePassword" method="post" id="update-password-form">
                    <input asp-for="ChangeUserPasswordModel.UserId" type="hidden" />
                    <div class="form-group">
                        <label asp-for="ChangeUserPasswordModel.CurrentPassword">Current Password</label>
                        <input asp-for="ChangeUserPasswordModel.CurrentPassword" type="password" class="form-control" placeholder="Enter current password">
                        @Html.ValidationMessageFor(model => model.ChangeUserPasswordModel.CurrentPassword)
                    </div>
                    <div class="form-group">
                        <label asp-for="ChangeUserPasswordModel.Password">Password</label>
                        <input asp-for="ChangeUserPasswordModel.Password" type="password" class="form-control" placeholder="Enter password" />
                        @Html.ValidationMessageFor(model => model.ChangeUserPasswordModel.Password)
                    </div>
                    <div class="form-group">
                        <label asp-for="ChangeUserPasswordModel.ConfirmPassword">Confirm Password</label>
                        <input asp-for="ChangeUserPasswordModel.ConfirmPassword" type="password" class="form-control" placeholder="Enter password again" />
                        @Html.ValidationMessageFor(model => model.ChangeUserPasswordModel.ConfirmPassword)
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary" form="update-password-form">Save changes</button>
            </div>
        </div>
    </div>
</div>


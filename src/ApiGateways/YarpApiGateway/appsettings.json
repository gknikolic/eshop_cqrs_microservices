{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Issuer": "https://localhost:7093",
    "Audience": "https://localhost:62094",
    "Key": "mysecretkey12345mysecretkey12345"
  },
  "ReverseProxy": {
    "Routes": {
      "catalog-route": {
        "ClusterId": "catalog-cluster",
        "Match": {
          "Path": "/catalog-service/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "{**catch-all}" },
          {
            "RequestHeader": "Authorization",
            "Set": "{RequestHeader:Authorization}"
          }
        ]
      },
      "basket-route": {
        "ClusterId": "basket-cluster",
        "Match": {
          "Path": "/basket-service/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "{**catch-all}" },
          {
            "RequestHeader": "Authorization",
            "Set": "{RequestHeader:Authorization}"
          }
        ]
      },
      "inventory-route": {
        "ClusterId": "inventory-cluster",
        "Match": {
          "Path": "/inventory-service/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "{**catch-all}" },
          {
            "RequestHeader": "Authorization",
            "Set": "{RequestHeader:Authorization}"
          }
        ]
      },
      "ordering-route": {
        "ClusterId": "ordering-cluster",
        "RateLimiterPolicy": "fixed",
        "Match": {
          "Path": "/ordering-service/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "{**catch-all}" },
          {
            "RequestHeader": "Authorization",
            "Set": "{RequestHeader:Authorization}"
          }
        ]
      },
      "customer-route": {
        "ClusterId": "customer-cluster",
        "RateLimiterPolicy": "fixed",
        "Match": {
          "Path": "/customer-service/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "{**catch-all}" },
          {
            "RequestHeader": "Authorization",
            "Set": "{RequestHeader:Authorization}"
          }
        ]
      }
    },
    "Clusters": {
      "catalog-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://catalog.api:8080"
          }
        }
      },
      "basket-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://basket.api:8080"
          }
        }
      },
      "inventory-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://inventory.api:8080"
          }
        }
      },
      "ordering-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://ordering.api:8080"
          }
        }
      },
      "customer-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://customer.api:8080"
          }
        }
      }
    }
  }
}
